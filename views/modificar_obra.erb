<div class="card">
  <h5 class="card-header">Modificar Obra - ID:<%=@obra_actual.id%></h5>
  <div class="card-body">
    <% if @errors %>
      <% @errors.each do |error| %>
        <div class="alert alert-danger" role="alert">
          <%= error%>
        </div>
      <% end %>
    <% end %>
    <form action='/modificar_obra/<%=@obra_actual.id%>' method='post'>
      <input type='hidden' name='_method' value='PUT'/>
      <div class="row align-items-start">
        <div class="col">
          Nombre:<br>
          <input type="text" name="nombre" value="<%=@obra_actual.nombre%>" class="form-control"><br>
          Tipo:<br>
          <input type="text" name="tipo" value="<%=@obra_actual.tipo%>" class="form-control"><br>
          Descripción:<br>
          <textarea id="descripcion" cols="29" rows="12" class="fieldform" name="descripcion" maxlength="2000" aria-required="true" style="height: 295px;" class="form-control"><%=@obra_actual.descripcion%></textarea>
        </div>
        <div class="col">
          Etapa:<br>
          <select class="form-control" name="etapa">
            <% @etapas.each do |etapa| %>
              <option  <%= "selected" if etapa == @obra_actual.etapa %> ><%=etapa%></option>
            <% end %>
          </select><br>
          Área responsable:<br>
          <input type="text" name="area" value="<%=@obra_actual.area_responsable%>" class="form-control"><br>
          Monto:<br>
          <input type="number" step="0.01" min="0" placeholder="$" name="monto" value="<%=@obra_actual.monto_contrato%>" class="form-control"><br>
          Comuna:<br>
          <input type="number" placeholder="1-15" min="1" max="15" name="comuna" value="<%=@obra_actual.comuna%>" class="form-control"><br>
          Barrio:<br>
          <input type="text" name="barrio" value="<%=@obra_actual.barrio%>" class="form-control"><br>
          Dirección:<br>
          <input type="address" name="direccion" value="<%=@obra_actual.direccion%>" class="form-control">
        </div>
        <div class="col">
          Fecha de inicio:<br>
          <input type="date" name="fecha_inicio" value="<%=@obra_actual.fecha_inicio%>" class="form-control"><br>
          Fecha estimada de finalización:<br>
          <input type="date" name="fecha_fin_planeada" value="<%=@obra_actual.fecha_fin_planeada%>" class="form-control"><br>
          Fecha de finalización:<br>
          <input type="date" name="fecha_fin_real" value="<%=@obra_actual.fecha_fin_real%>" class="form-control"><br>
          Porcentaje de avance:<br>
          <input type="number" placeholder="%" min="0" max="100" name="avance" value="<%=@obra_actual.porcentaje_avance%>" class="form-control"><br>
          Link a la imagen:<br>
          <input type="url" placeholder="http://" name="imagen" value="<%=@obra_actual.imagen%>" class="form-control"><br><br>
          <button type='submit' class='btn btn-primary' style="float:right">Guardar</button>
        </div>
      </div>
    </form>
  </div>
</div>